@model CountryModel

<h2>Add Country</h2>

@using (Html.BeginForm("Create", "Country", FormMethod.Post))
{
<div class="container-full" style="background-color:aliceblue">
    <div class="container">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name)

        @Html.LabelFor(x => x.ISO3)
        @Html.TextBoxFor(x => x.ISO3)
        <input type="submit" value="Submit" />
    </div>
</div>
}